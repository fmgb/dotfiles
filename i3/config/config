# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango: Monospace, FontAwesome 10

    #status_command i3status -c $HOME/.i3/config_i3status
    status_command py3status -c ~/.config/i3/config_i3status
    position          top
    output LVDS1
    tray_output LVDS1
    		separator_symbol "|"
		workspace_buttons yes
		strip_workspace_numbers no
		binding_mode_indicator yes
		height 20
		colors {
		       background $background
		       statusline $foreground
		       separator $darkgrey

		       focused_workspace  $fg $bg $foreground
		       active_workspace   $background $background $foreground
		       inactive_workspace $background $background $darkgrey
		       urgent_workspace   $background $background $red
		       # background $background
		       # statusline $tx

		       # focused_workspace  #ffffff #ff5252
		       # active_workspace   #ffffff #212121
		       # inactive_workspace #888888 #222222
		       # urgent_workspace   #ffffff #900000
	       }
}


