# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:

# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}


order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "pomodoro"
order += "sysdata"
order += "dpms"
#order += "volume master"
order += "battery_level"
order += "tztime local"
order += "imap"

pomodoro {
		 display_bar = False
		 format = "{mmss}"
		 max_breaks = 4
		 num_progress_bars = 5
#		 sound_pomodoro_start = "/home/aalmiramolla/.i3/pomodoro.mp3"
}

battery_level {
		mode = "ascii_bar"
}

wireless _first_ {
        format_up = "W: %quality at %essid"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
        format = "%d-%m-%Y %H:%M:%S"
}

disk "/" {
        format = "/: %avail"
}

disk "/home" {
        format = " : %avail "
}

imap {
     #mode = "imap"
}

